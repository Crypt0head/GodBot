{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "GodBot",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceRoot}/src/main.cpp",
                "-o",
                "${workspaceRoot}/bin/App.out",
                "-lcurl",
                "-lssl",
                "-lcrypto"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "UNIT-TESTS",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceRoot}/tests/general_tests.cpp",
                "-o",
                "${workspaceRoot}/bin/Test.out",
                "-lcurl"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Unit-Tests"
        }
    ],
    "version": "2.0.0"
}